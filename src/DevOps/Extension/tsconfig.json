{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "alwaysStrict": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist/scripts",
    "sourceMap": true,
    "sourceRoot": ".",
    "esModuleInterop": true,
    "lib": [
      "ES5",
      "ES6",
      "DOM",
      "ES2015.Promise"
    ],
      "paths": {
        "@sw/benchmarker-core": [
          "../Package/"
        ]
      }
  },

  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "outDir": "bin",
      "rootDir": "..",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "noImplicitOverride": true,
      "alwaysStrict": true,
      "strict": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": [
        "ES2015"
      ],
      "paths": {
        "@sw/benchmarker-core": [
          "../Package/"
        ]
      },
      "types": [
        "node",
        "webpack"
      ]
    },
    "include": [
      "./src/lib/node/**/*.ts",
      "webpack/types.d.ts"
    ]
  },
  "include": [
    "src/scripts/**/*.ts",
    "src/lib/manifest.d.ts",
    "src/lib/common/**/*.ts",
    "node_modules/webpack/types.d.ts",
     "src/lib/node/console-logger.ts"
  ],
  "exclude": [
    "bin",
    "obj",
    "node_modules"
  ]
}