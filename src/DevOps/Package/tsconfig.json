{
    "compilerOptions": {
        "outDir": "./dist",
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": ".",
        "target": "ES2015",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "alwaysStrict": true,
        "strict": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "declaration": true,
        "esModuleInterop": true,
        "paths": {
            "@sodiware/benchmarker-common": [
                "../Common"
            ],
            "@sodiware/benchmarker-common/*": [
                "../Common/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
